<?xml version="1.0"?>
<block>
  <name>redhawk_sink</name>
  <key>redhawk_integration_redhawk_sink</key>
  <category>[redhawk_integration]</category>
  <import>import redhawk_integration</import>
  <make>redhawk_integration.redhawk_sink($corba_namespace_name)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>IOR to Connect To</name>
    <key>naming_context_ior</key>
    <type>string</type>
  </param>
  <param>
    <name>CORBA Namespace Name</name>
    <key>corba_namespace_name</key>
    <type>string</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>short</type>
  </sink>

 </block>
