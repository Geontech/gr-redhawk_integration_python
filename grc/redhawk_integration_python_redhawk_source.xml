<?xml version="1.0"?>
<block>
  <name>redhawk_source</name>
  <key>redhawk_integration_redhawk_source</key>
  <category>redhawk_integration</category>
  <import>import redhawk_integration_python</import>
  <make>redhawk_integration_python.redhawk_source($naming_context_ior, $corba_namespace_name, "$type", $packet_depth)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>IOR to Connect To</name>
    <key>naming_context_ior</key>
    <value>naming_context_ior</value>
    <type>string</type>
    <hide>all</hide>
  </param>
  <param>
    <name>CORBA Namespace Name</name>
    <key>corba_namespace_name</key>
    <value>corba_namespace_name</value>
    <type>string</type>
    <hide>all</hide>
  </param>

  <param>
    <name>Output Type</name>
    <key>type</key>
    <type>enum</type>
    <option>
      <name>Complex</name>
      <key>complex</key>
    </option>
    <option>
      <name>Float</name>
      <key>float</key>
    </option>
    <option>
      <name>Int</name>
      <key>int</key>
    </option>
    <option>
      <name>Short</name>
      <key>short</key>
    </option>
    <option>
      <name>Byte</name>
      <key>byte</key>
    </option>
  </param>

  <param>
    <name>Packet Buffer Depth</name>
    <key>packet_depth</key>
    <value>10</value>
    <type>int</type>
  </param>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>$type</type>
    <nports>1</nports>
  </source>
</block>
